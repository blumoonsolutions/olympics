<%- include('../partials/head') -%>
<%- include('../partials/navbar') -%>
<link rel="stylesheet", href="css/register.css">
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-xl-10">
            <div class="card rounded-3 text-black">
                <form action="/auth/register" method="post">
                    <div class="row site-id">
                        <img  src="img/blumoon.svg">
                        <h1 class="text-center">Register</h1>
                    </div>
                    <div class="row">
                        <input class="field" type="text", name="email", placeholder="email">
                    </div>
                    <div class="row">
                        <input class="field" id="psswd" type="password", name="password", placeholder="password">
                    </div>
                    <div class="row">
                        <input class="field" id="repeat" type="password", name="repeat", placeholder="repeat password">
                    </div>
                    <div class="row">
                        <button id="reg-btn" class="btn btn-primary" type="submit">Register</button>
                    </div>
                    <div class="row">
                        <center><a href="login">Already have an account?</a></center>
                    </div>
                    <div class="row">
                        <center><p class="recovery"></p></center>
                    </div>
                </form>
            </div>
        </div>
      </div>
    </div>
  </section>
<%- include('../partials/footer') -%>